<plugin>

   <extension
         id="chart"
         name="The chart extension"
         point="org.eclipse.birt.report.model.reportItemModel">
      <reportItem
            class="org.eclipse.birt.chart.reportitem.ChartReportItemFactoryImpl"
            defaultStyle="chart"
            displayNameID="Element.Chart"
            extendsFrom="ReportItem"
            extensionName="Chart"
            hasStyle="true"
            isNameRequired="false"
            themeType="Chart">
         <style
               displayNameID="Element.Chart"
               name="chart"
               type="Chart"/>
         <property
               type="xml"
               displayNameID="Element.Chart.xmlRepresentation"
               name="xmlRepresentation"/>
         <propertyVisibility
               visibility="hide"
               name="xmlRepresentation"/>
         <property
               type="string"
               displayNameID="Element.Chart.outputFormat"
               name="outputFormat"/>
         <propertyVisibility
               visibility="hide"
               name="outputFormat"/>
         <property
               detailType="Action"
               displayNameID="Element.Chart.action"
               isList="true"
               name="action"
               type="structure"/>
    	<property detailType="SortKey" 
    		displayNameID="Element.ListingGroup.sort" 
    		isList="true" 
    		name="sort" 
    		type="structure"/>
         <overrideProperty
               allowedUnits="in,cm,mm,pt,px,pc,%"
               propertyName="width">
         </overrideProperty>
         <overrideProperty
               allowedUnits="in,cm,mm,pt,px,pc,%"
               propertyName="height">
         </overrideProperty>
         <property
               detailType="FilterCondition"
               displayNameID="Element.ExtendedItem.filter"
               isList="true"
               name="filter"
               type="structure">
         </property>
         <property
               detailType="FilterConditionElement"
               isList="true"
               name="cubeFilter"
               type="contentElement">
            <elementType
                  name="FilterConditionElement">
            </elementType>
         </property>
         <property
               canInherit="true"
               detailType="Chart"
               isEncryptable="false"
               isList="false"
               name="hostChart"
               type="elementRef">
         </property>
         <propertyVisibility
               name="hostChart"
               visibility="hide">
         </propertyVisibility>
         <property
               canInherit="true"
               isEncryptable="false"
               isList="false"
               name="chartType"
               type="string">
         </property>
         <propertyVisibility
               name="chartType"
               visibility="hide">
         </propertyVisibility>
         <property
               canInherit="true"
               defaultValue="true"
               isEncryptable="false"
               isList="false"
               name="inheritColumns"
               type="boolean">
         </property>
         <propertyVisibility
               name="inheritColumns"
               visibility="hide">
         </propertyVisibility>
         <property
               canInherit="true"
               defaultDisplayName="PDF tag type"
               defaultValue="Figure"
               isEncryptable="false"
               isList="false"
               name="tagType"
               type="string">
         </property>
         <property
               canInherit="true"
               isEncryptable="false"
               isList="false"
               name="url"
               type="string">
         </property>         
      </reportItem>
   </extension>
   <extension
         id="chart"
         name="The chart extension"
         point="org.eclipse.birt.report.engine.reportitemPresentation">
      <reportItem
            class="org.eclipse.birt.chart.reportitem.ChartReportItemPresentationProxy"
            name="Chart"
            supportedFormats="jpeg; png; gif; bmp"/>
   </extension>
   <extension
         point="org.eclipse.birt.report.engine.reportitemGeneration">
      <reportItem
            class="org.eclipse.birt.chart.reportitem.ChartReportItemGenerationProxy"
            name="Chart"/>
   </extension>
   <extension
         point="org.eclipse.birt.report.engine.reportitemQuery">
      <reportItem
            class="org.eclipse.birt.chart.reportitem.ChartReportItemQueryImpl"
            getAllRows="true"
            name="Chart">
      </reportItem>
   </extension>
   <extension
         point="org.eclipse.birt.report.model.IScriptableObjectClassInfo">
      <scriptableClassInfo
            class="org.eclipse.birt.chart.reportitem.ChartScriptableClassInfo"
            extensionName="Chart">
      </scriptableClassInfo>
   </extension>
   
</plugin>
