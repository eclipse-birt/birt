   </category-def>

   <category-def name="BirtAllInOne" label="BIRT Report Designer All-In-One Product- Do not install in your IDE!">
      <description>
         BIRT Report Designer All-In-One Product. Do not install in your IDE!
      </description>
   </category-def>

   <iu>
     <category name="BirtAllInOne"/>
     <query>
       <expression type="match">id=="org.eclipse.birt.report.designer.all"</expression>
     </query>
   </iu>

