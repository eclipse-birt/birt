<project name="DocCheck" default="nodefault" >
	
	<property name="working.dir" value="${buildDirectory}/plugins"/>
    <property name="tool.lib.path" value="${p4.home}/dailybuild/source/org.eclipse.birt.build/lib" />
    <property name="javaCrossReference.dir" value="${postingDirectory}/${buildId}/javaCrossReferenceDoc"/>
	<property name="javaDocCheck.base.dir" value="${postingDirectory}/${buildId}/javaDocCheck"/>
    

    <property name="birt.build.tools.dir" value="${p4.home}/dailybuild/source/org.eclipse.birt.build"/>

    <path id="lib.path">
        <fileset dir="${p4.home}/dailybuild/source/org.eclipse.birt.build" includes="*.jar,lib/*.jar"/>
    </path>

    <typedef name="dynamicProperty" classname="org.apache.tools.ant.taskdefs.Property" classpathref="lib.path" loaderref="lib.path.loader"/>
    <typedef name="projectInfo" classname="org.eclipse.birt.build.ProjectInfo" classpath="${birt.build.tools.dir}/bin" classpathref="lib.path" loaderref="lib.path.loader" />
    <typedef name="projectList" classname="org.eclipse.birt.build.ProjectList" classpath="${birt.build.tools.dir}/bin" classpathref="lib.path" loaderref="lib.path.loader" />
    <taskdef name="forEach" classname="org.eclipse.birt.build.ForEach" classpath="${birt.build.tools.dir}/bin" classpathref="lib.path" loaderref="lib.path.loader"/>


    <path id="javasrc.classpath">
        <path location="${tool.lib.path}/javasrc.jar" />
        <path location="${tool.lib.path}/antlrall.jar"/>
    </path>

    <target name="nodefault">
		<echo message="There is no default target. Please choose one to execute."/>
    </target>

	<target name="init">
        <property file="${eclipse.build.configs}/../../config.properties" />
	</target>
		
    <target name="generateJavaCrossReference" depends="init">
        <tstamp>
            <format property="generateJavaCrossReference.time" pattern="MM-dd-yyyy hh:mm aa" locale="en" />
        </tstamp>
        <echo message="TOP level starts [generateJavaCrossReference] at ${generateJavaCrossReference.time} " level="info" />

        <delete dir="${javaCrossReference.dir}" failonerror="false" />
        <mkdir dir="${javaCrossReference.dir}" />
        <forEach iteratorId="projects.list" failonerror="false">
            <dynamicProperty name="projectName" value="current.projectName" />
            <echo message="TOP level starts [conditionalGenerateJavaCrossReference] on ${projectName}." level="info" />
            <antcall target="conditionalGenerateJavaCrossReference" />
            <echo message="TOP level finishes [conditionalGenerateJavaCrossReference] on ${projectName}." level="info" />
        </forEach>
        <echo message="TOP level [generateJavaCrossReference] target finished." level="info" />
    </target>
	
	<!--
		Generate Java document check report
	-->
	<target name="generateDocumentCheck" depends="init" >
		<tstamp>
			<format property="generateDocumentCheck.time" pattern="MM-dd-yyyy hh:mm aa" locale="en" />
		</tstamp>

		<echo message="TOP level starts [generateDocumentCheck] at ${generateDocumentCheck.time} " level="info" />

		<delete dir="${javaDocCheck.base.dir}" failonerror="false" />
		<mkdir dir="${javaDocCheck.base.dir}" />

		<forEach iteratorId="projects.list" failonerror="false">
			<dynamicProperty name="projectName" value="current.projectName" />
			<echo message="TOP level starts [conditionalGenerateDocumentCheck] on ${projectName}." level="info" />
			<antcall target="conditionalGenerateDocumentCheck" />
			<echo message="TOP level finishes [conditionalGenerateDocumentCheck] on ${projectName}." level="info" />
		</forEach>

		<echo message="TOP level generateDocumentCheck] target finished." level="info" />
	</target>

	<!--  
		  Generate Java document check results if the project has a src folder.
	 	  Parameter:  projectName
	 -->
	<target name="conditionalGenerateDocumentCheck" depends="checkProjectHasSrc" if="has.src">
		<mkdir dir="${javaDocCheck.base.dir}/${projectName}" />
		<javadoc doclet="com.sun.tools.doclets.doccheck.DocCheck" 
			docletpath="${tool.lib.path}/doccheck.jar" 
			packagenames="org.eclipse.birt.*" 
			sourcepath="${working.dir}/${projectName}/src" 
			destdir="${javaDocCheck.base.dir}/${projectName}" 
			private="false" 
			author="true" 
			version="true" 
			source="1.4" 
			failonerror="false">
		</javadoc>
	</target>
	
    <target name="conditionalGenerateJavaCrossReference" depends="checkProjectHasSrc" if="has.src">
        <mkdir dir="${javaCrossReference.dir}/${projectName}" />

        <!-- The two passes are done to minimize memory consumption because of the  
            cross-referencing that it does. First pass reads the sources persisting to
            disk, the second pass resolves references and writes the result. -->

        <java classname="javasrc.app.Pass1">
            <classpath refid="javasrc.classpath" />
            <sysproperty key="title" value="${projectName}" />
            <sysproperty key="outdir" value="${javaCrossReference.dir}/${projectName}" />
            <arg value="${working.dir}/${projectName}/src" />
        </java> 
        <java classname="javasrc.app.Pass2">
            <classpath refid="javasrc.classpath" />
            <sysproperty key="title" value="${projectName}" />
            <sysproperty key="outdir" value="${javaCrossReference.dir}/${projectName}" />
        </java> 
    </target>
	
	<!--
		Set conditional property ${has.src} if there are src folder under the project.
		Parameter: projectName
	-->
	<target name="checkProjectHasSrc">
		<condition property="has.src">
			<and>
				<available file="${working.dir}/${projectName}/src" />
			</and>
		</condition>
	</target>
	
