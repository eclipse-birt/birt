		</ant>
		<antcall target="logger">
			<param name="message" value="Third party feature building finished" />
		</antcall>
	</target>
	<!-- - - - - - - - - - - - - - - - - - target: buildBirtRCPFeature - - - 
		- - - - - - - - - - - - - - -->
