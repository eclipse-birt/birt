<plugin>
   <extension
         point="org.eclipse.birt.report.model.reportItemModel">
      <reportItem
            class="org.eclipse.birt.extension.qrcode.QRCodeItemFactory"
            extensionName="QRCode">
         <property
               allowExpression="true"
               defaultDisplayName="Width in dots"
               defaultValue="105"
               name="dotsWidth"
               type="integer"/>
         <property
               defaultDisplayName="Text Content"
               defaultValue="&quot;QR-Code&quot;"
               name="text"
               type="expression"/>
         <property
               defaultDisplayName="Encoding"
               defaultValue="utf-8"
               name="encoding"
               type="string"/>
         <property
               defaultDisplayName="QR-Version"
               defaultValue=""
               name="qrVersion"
               type="integer"/>
         <property
               defaultDisplayName="Error Correction Level"
               defaultValue="M"
               name="errorCorrectionLevel"
               type="string"/>
      </reportItem>
   </extension>

     <extension
         point="org.eclipse.birt.report.designer.ui.reportitemUI">
      <model extensionName="QRCode"/>
      <palette icon="icons/qrcode.png"/>
      <editor
            showInMasterPage="true"
            canResize="true"
            showInDesigner="true"/>
      <outline icon="icons/qrcode.png"/>
      <reportItemFigureUI
            class="org.eclipse.birt.extension.qrcode.QRCodeFigureUI">
      </reportItemFigureUI>
      <builder
            class="org.eclipse.birt.extension.qrcode.QRCodeBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.birt.report.engine.reportitemPresentation">
      <reportItem
            class="org.eclipse.birt.extension.qrcode.QRCodePresentationImpl"
            name="QRCode"/>
   </extension>
   <extension
         point="org.eclipse.birt.report.designer.ui.elementAdapters">
      <adaptable
            class="org.eclipse.birt.report.model.api.ExtendedItemHandle">
         <adapter
               factory="org.eclipse.birt.extension.qrcode.views.QRCodePageGeneratorFactory"
               id="ReportDesign.AttributeView.QRCodePageGenerator"
               singleton="false"
               type="org.eclipse.birt.report.designer.ui.views.IPageGenerator">
            <enablement>
               <test
                     forcePluginActivation="true"
                     property="ExtendItemHandle.extensionName"
                     value="QRCode">
               </test>
            </enablement>
         </adapter>
      </adaptable>
   </extension>

</plugin>
